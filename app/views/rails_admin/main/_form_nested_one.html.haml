.controls.small-12.columns.large-9{data: { nestedone: true }}
  %ul.nav{style: 'margin-bottom:0px; display:none'}
  .btn-group
    %a.button.small.radius.toggler{:'data-toggle' => "button", :'data-target' => "#{form.jquery_namespace(field)} > .tab-content", class: (field.active? ? 'active' : '') }
      %i.icon-white
    - unless field.nested_form[:update_only] || !field.inline_add
      = form.link_to_add "<i class=\"icon ion-plus\"></i> #{wording_for(:link, :new, field.associated_model_config.abstract_model)}".html_safe,
        field.name,
        { class: 'button small radius', :'data-add-label' => "<i class=\"icon ion-plus\"></i> #{wording_for(:link, :new, field.associated_model_config.abstract_model)}".gsub("\n", "") }
  = form.errors_for(field)
  = form.help_for(field)

.tab-content
  = form.fields_for field.name do |nested_form|
    - if field.nested_form[:allow_destroy]
      = nested_form.link_to_remove '<span class="button alert radius"><i class="icon ion-trash-a"></i></span>'.html_safe
    = nested_form.generate({action: :nested, model_config: field.associated_model_config, nested_in: field })
