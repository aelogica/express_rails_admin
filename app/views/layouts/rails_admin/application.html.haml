%html
  %head
    %meta{content: "IE=edge", "http-equiv" => "X-UA-Compatible"}
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %meta{content: "text/html; charset=utf-8", "http-equiv" => "Content-Type"}
    %meta{content: "NONE,NOARCHIVE", name: "robots"}
    = csrf_meta_tag
    = stylesheet_link_tag "rails_admin/rails_admin", media: :all
    = javascript_include_tag "rails_admin/rails_admin.js"
    -# Initialize JS simple i18n
    :javascript
      RailsAdmin.I18n.init(JSON.parse("#{j I18n.t("admin.js").to_json}"))
  %body.rails_admin
    %nav.top-bar{data: {topbar: true}}
      %ul.title-area
        %li.name
          %h1
            %a.brand.pjax{href: dashboard_path}
              = _get_plugin_name[0] || 'Rails'
              %small= _get_plugin_name[1] || 'Admin'
      %section.top-bar-section{style: 'float: right; margin-right: 3em;'}
        %ul.right
          - actions(:root).each do |action|
            %li{class: "#{action.action_name}_root_link"}= link_to wording_for(:menu, action), { action: action.action_name, controller: 'rails_admin/main' }, class: "pjax"
          - if main_app_root_path = (main_app.root_path rescue false)
            %li= link_to t('admin.home.name').capitalize, main_app_root_path
          - if _current_user
            - if user_link = edit_user_link
              %li= user_link
            - if logout_path.present?
              %li= link_to content_tag('span', t('admin.misc.log_out'), class: 'label label-important'), logout_path, method: Devise.sign_out_via
            - if _current_user.respond_to?(:email) && _current_user.email.present?
              %li= image_tag "#{(request.ssl? ? 'https://secure' : 'http://www')}.gravatar.com/avatar/#{Digest::MD5.hexdigest _current_user.email}?s=30", style: 'padding-top:5px'
    .row
      .small-9.push-3.columns
        .content{:'data-pjax-container' => true}= render template: 'layouts/rails_admin/pjax'
      .small-3.pull-9.columns
        %ul.side-nav= main_navigation
        %ul.side-nav= static_navigation
- content_for :content do
  %main.main-container{role: "main"}
    = render 'shared/rails_admin/sidebar'
    .content-body
      = render 'shared/express_admin/messages' rescue render 'shared/rails/messages'
      - unless params[:action].eql?('dashboard')
        .row.page-header
          %h1= @page_name
          - if content_for?(:page_header_lead)
            %p.lead
              = yield :page_header_lead
          = breadcrumb
        .row.page-body
          = render template: 'layouts/rails_admin/pjax'

- content_for :page_javascript do
  = javascript_include_tag 'rails_admin/rails_admin'
  :javascript
    RailsAdmin.I18n.init(JSON.parse("#{j I18n.t("admin.js").to_json}"))

- content_for :page_css do
  = stylesheet_link_tag 'rails_admin/rails_admin'
  = stylesheet_link_tag 'app_express/application'

= render template: 'layouts/express_admin/admin' rescue render template: 'layouts/rails_admin/admin'
