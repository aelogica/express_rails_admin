- content_for :content do
  %main.main-container{role: "main"}
    = render 'shared/rails_admin/sidebar'
    .content-body
      - if File.exists?(Rails.root.join("app", "views", "shared", "express_admin", "_messages.html.haml"))
        = render 'shared/express_admin/messages'
      - else
        = render 'shared/rails_admin/messages'
      - unless params[:action].eql?('dashboard')
        .page-header
          .row
            .small-12.columns
              %title= "#{@abstract_model.try(:pretty_name) || @page_name} | #{[_get_plugin_name[0] || 'Rails', _get_plugin_name[1] || 'Admin'].join(' ')}"
              %h1= @page_name
              = breadcrumb
        .row
          .small-12.columns
            = render template: 'layouts/rails_admin/pjax'

- content_for :page_javascript do
  = javascript_include_tag 'rails_admin/rails_admin'
  :javascript
    RailsAdmin.I18n.init(JSON.parse("#{j I18n.t("admin.js").to_json}"))

- content_for :page_css do
  = stylesheet_link_tag 'rails_admin/rails_admin'

- if File.exists?(Rails.root.join("app", "views", "layouts", "express_admin", "admin.html.haml"))
  = render template: 'layouts/express_admin/admin'
- else
  = render template: 'layouts/rails_admin/admin'
